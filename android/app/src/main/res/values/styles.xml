<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- ========================================== -->
    <!-- APP THEME (Cyberpunk for ISABELLE AI)     -->
    <!-- ========================================== -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors matching cyberpunk theme -->
        <item name="colorPrimary">#00FFFF</item>
        <item name="colorPrimaryVariant">#00CCAA</item>
        <item name="colorOnPrimary">#0B1426</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">#9C4EFF</item>
        <item name="colorSecondaryVariant">#00CCAA</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">#0B1426</item>
        <item name="colorSurface">#1A0F2E</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>
        
        <!-- Error colors -->
        <item name="colorError">#E53E3E</item>
        <item name="colorOnError">#FFFFFF</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">#0A0E1A</item>
        <item name="android:navigationBarColor">#0A0E1A</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Accessibility optimizations -->
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>

    <!-- ========================================== -->
    <!-- LAUNCH THEME (Splash Screen)              -->
    <!-- ========================================== -->
    <style name="LaunchTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- ========================================== -->
    <!-- NORMAL THEME (After Splash)               -->
    <!-- ========================================== -->
    <style name="NormalTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <!-- ========================================== -->
    <!-- ACCESSIBILITY STYLES                      -->
    <!-- ========================================== -->
    
    <!-- Large text for visually impaired users -->
    <style name="AccessibilityText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Large button style for accessibility -->
    <style name="AccessibilityButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">72dp</item>
        <item name="android:minWidth">72dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0B1426</item>
        <item name="backgroundTint">#00FFFF</item>
    </style>
    
    <!-- Emergency button style -->
    <style name="EmergencyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">80dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">#E53E3E</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>